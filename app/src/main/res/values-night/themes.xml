<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Moqaida" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/colorOnSecondary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondary</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="HeaderTextView" parent="Widget.MaterialComponents.TextView">
    <item name="android:textColor">@color/white</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="lightedTextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">?attr/colorSecondary</item>
    </style>
    <style name="ColoredHeaderTextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/colorSecondary</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="textViewInCardView" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/textGry</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="Splash" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/colorPrimary</item>
    </style>
</resources>